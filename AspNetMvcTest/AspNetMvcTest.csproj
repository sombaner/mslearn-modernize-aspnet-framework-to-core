<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>AspNetMvcTest</RootNamespace>
    <AssemblyName>AspNetMvcTest</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude old .NET Framework files from compilation -->
    <Compile Remove="App_Start\**" />
    <Compile Remove="Global.asax.cs" />
    <Compile Remove="Properties\AssemblyInfo.cs" />
    <Content Remove="Content\**" />
    <Content Remove="Scripts\**" />
    <Content Remove="Global.asax" />
    <Content Remove="Web.config" />
    <Content Remove="Web.Debug.config" />
    <Content Remove="Web.Release.config" />
    <Content Remove="packages.config" />
    <None Remove="Views\Web.config" />
  </ItemGroup>

</Project>